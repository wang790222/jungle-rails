<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order_result.each do |item| %>
          <%= render 'item', product_name: item['name'],
                             product_image: "/uploads/product/image/" + item['product_id'] + "/" + "tiny_" + item['image'],
                             product_description: item['description'],
                             product_price: item['item_price_cents'].to_i / 100.0,
                             quantity: item['quantity'].to_i,
                             total_price: item['total_price_cents'].to_i / 100.0
                             %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
